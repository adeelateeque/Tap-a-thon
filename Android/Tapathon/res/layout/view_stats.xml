<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:weightSum="1"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.333"
        android:weightSum="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:textSize="20sp"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:text="QUESTION"
            android:gravity="center"
            android:layout_weight="0.30"
            android:textColor="@color/tappad_green"
            android:layout_marginTop="@dimen/xhdpi_5dp"/>

        <TextView
            android:id="@+id/tv_qns"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.70"
            android:textSize="40sp"
            android:gravity="center_horizontal|top"
            android:layout_marginTop="-5dp"
            android:textColor="#00b1ff"
            android:textStyle="bold"
            android:text="test"
            android:shadowColor="#00b1ff" android:shadowDx="0.0" android:shadowDy="0.0" android:shadowRadius="30"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.333"
        android:weightSum="1"
        android:gravity="center"
        android:orientation="vertical"
        >

        <TextView
            android:textSize="20sp"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:text="SCORE (%)"
            android:gravity="center"
            android:layout_weight="0.30"
            android:textColor="@color/tappad_green"
            android:layout_marginTop="@dimen/xhdpi_5dp"/>

        <TextView
            android:id="@+id/tv_multipler"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.70"
            android:textSize="40sp"
            android:gravity="center_horizontal|top"
            android:layout_marginTop="@dimen/xhdpi_negative_5dp"
            android:textColor="#ffff00"
            android:textStyle="bold"
            android:shadowColor="#ffff00" android:shadowDx="0.0" android:shadowDy="0.0" android:shadowRadius="30"
           />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.333"
        android:weightSum="1"
        android:orientation="vertical"
        android:gravity="center"
        >

        <TextView
            android:textSize="20sp"
            android:layout_height="0dp"
            android:layout_width="fill_parent"
            android:text="TIMER (s)"
            android:layout_weight="0.30"
            android:gravity="center"
            android:textColor="@color/tappad_green"
            android:layout_marginTop="@dimen/xhdpi_5dp"/>

        <TextView
            android:id="@+id/tv_timer"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.70"
            android:textSize="40sp"
            android:gravity="center_horizontal|top"
            android:layout_marginTop="@dimen/xhdpi_negative_5dp"
            android:textColor="@color/tappad_red"
            android:textStyle="bold"
            android:shadowColor="@color/tappad_red" android:shadowDx="0.0" android:shadowDy="0.0" android:shadowRadius="30"
            />
    </LinearLayout>

</LinearLayout>