<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
    android:background="@drawable/sd_main"
    android:baselineAligned="false">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.15"></LinearLayout>

    <LinearLayout android:layout_weight="0.85"  android:layout_width="fill_parent"
                  android:layout_height="0dp" android:paddingLeft="10dp" android:paddingRight="12dp">

        <GridView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal|top"
            android:id="@+id/gridview"
            android:numColumns="4"
            android:stretchMode="columnWidth"
            android:gravity="center">
        </GridView>

    </LinearLayout>
</LinearLayout>

