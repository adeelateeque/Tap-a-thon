<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1"
    android:background="@drawable/sd_main"
    android:baselineAligned="false">

    <LinearLayout android:layout_width="fill_parent"
                  android:layout_height="0dp"
                  android:layout_weight="0.15"></LinearLayout>

    <LinearLayout android:layout_weight="0.85"  android:layout_width="fill_parent"
                  android:layout_height="0dp" android:paddingLeft="10dp" android:paddingRight="12dp" android:weightSum="1" android:orientation="horizontal">

        <GridView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.75"
            android:layout_gravity="left|top"
            android:gravity="left"
            android:id="@+id/gridview"
            android:numColumns="3"
            android:stretchMode="columnWidth">
        </GridView>

        <LinearLayout  android:layout_width="0dp"
                       android:layout_height="fill_parent"
                       android:layout_weight="0.25"></LinearLayout>

    </LinearLayout>
</LinearLayout>

