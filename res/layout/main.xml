<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:weightSum="1">
    <ListView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:id="@+id/listView" android:layout_gravity="center_horizontal|top" android:layout_weight="0.2"/>
    <com.zhideel.tapathon.MultitouchView
            android:layout_width="0dp"
            android:layout_height="fill_parent" android:id="@+id/gestureOverlayView"
            android:background="@color/tappad_white" android:layout_weight="0.8">
    </com.zhideel.tapathon.MultitouchView>
</LinearLayout>

